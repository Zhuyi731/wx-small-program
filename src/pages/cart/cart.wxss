page {
    background: #eee;
    height: 100%;
}

.cart-container {
    padding: 0;
    margin: 0;
    width: 100%;
    height: 100%;
    align-items: center;
    justify-content: space-between;
}

.page-container {
    flex:1;
    height: 1100rpx;
}

.scroll-container {
    display: flex;
    flex-flow: column nowrap;
    align-items: center;
    justify-content: flex-start;
}

.cart-block {
    width: 100%;
    margin: 10rpx 0;
    padding: 20rpx;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    align-items: center;
    justify-content: flex-start;
    background: #fff;
    border: 1px solid #d7d7d7;
}

.cart-img-wrap {
    width: 200rpx;
    height: 200rpx;
}

.cart-img-wrap image {
    width: 100%;
    height: 100%;
}

.cart-detail-wrap {
    width: 500rpx;
    height: 200rpx;
    display: flex;
    flex-flow: column wrap;
    align-items: space-between;
    justify-content: space-between;
}

.cart-description {
    width: 100%;
    font-size: 26rpx;
    color: #333;
    height: 26rpx;
    line-height: 26rpx;
    text-overflow: ellipsis;
}

.cart-description-wrap {
    width: 100%;
    font-size: 26rpx;
    color: #333;
    height: 34rpx;
    line-height: 30rpx;
    margin-top: 20rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}


.cart-count-wrap {
    display: flex;
    height: 60rpx;
    width: 100%;
    flex-flow: row nowrap;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 20rpx;
}

.cart-price {
    color: #d82228;
    font-size: 32rpx;
    font-weight: bold;
}

.cart-count {
    width: 220rpx;
    height: 100%;
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
}

.cart-count button {
    height: 60rpx;
    width: 60rpx;
    border-radius: 30rpx;
    background: #ed7020;
    margin: 0;
    font-size: 40rpx;
    padding: 0;
    color: #fff;
    line-height: 58rpx;
    font-weight: bold;

}

.footer {
    display: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    width: 100%;
    height: 100rpx;
    background: #fff;
    border: 1px solid #d7d7d7;
    z-index: 999;
}

.total-price-wrap {
    height: 100rpx;
    line-height: 100rpx;
    font-size: 32rpx;
    color: #666;
    font-weight: bold;
    padding-left: 40rpx;
    width: 200rpx;
    display: inline-block;
    float: left;
}

.total-price {
    color: #d82228;
}

.settle {
    height: 100rpx;
    width: 300rpx;
    background: #ed7020;
    color: #fff;
    font-size: 36rpx;
    font-weight: bold;
    line-height: 100rpx;
    margin: 0;
    padding: 0;
    border-radius: 0;
    display: inline-block;
    float: right;
}