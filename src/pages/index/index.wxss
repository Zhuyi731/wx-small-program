.nav {
    width: 100%;
    background: #F60;
    color: #eee;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: space-between;
    align-items: flex-start;
    padding: 20rpx;
    font-size: 28rpx;
    position: fixed;
    top: 0;
    left: 0;
    z-index:999;
    height:40px;
}

.search {
    width: 60%;
    background: #eee;
    border-radius: 20rpx;
    height: 40rpx;
    font-size: 40rpx;
    line-height: 40rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding: 0 20rpx;
}

.search input {
    font-size: 24rpx;
    height: 40rpx;
    min-height: 40rpx;
    line-height: 40rpx;
    color: #666;
    width: 100%;
}

.search-placeholder {
    color: #ccc;
    font-size: 24rpx;
    height: 40rpx;
    line-height: 40rpx;
}

.swiper {
    height: 300rpx;
    width: 100%;
    padding: 0;
    margin-top: 40px;
}

.view-item {
    height: 300rpx;
    width: 100%;
}

.view-1 {
    background: #f00;
}

.view-2 {
    background: #0f0;
}

.good-container {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    padding: 10rpx 20rpx;
    background: #eee;
}

.good-wrap {
    width: 340rpx;
    height: 380rpx;
    margin-bottom: 20rpx;
    padding-bottom: 10rpx;
    border-radius: 8rpx;
    overflow: hidden;
    background: #fff;
    box-shadow: 2px 4px 12px 1px rgba(0, 0, 0, 0.35);
}

.good-wrap-hover {
    margin-top: -15rpx;
    transition: 0.3s all;
    box-shadow: 2px 4px 4px 1px rgba(0, 0, 0, 0.35);
}

.good-img {
    width: 100%;
    height: 300rpx;
}

.desc-wrap {
    padding: 10rpx;
}

.good-title {
    font-size: 24rpx;
    color: #000;
    text-align: left;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    display: block;
}

.good-price {
    font-size: 26rpx;
    color: #f00;
    float: left;
}

.good-place {
    font-size: 24rpx;
    float: right;
}